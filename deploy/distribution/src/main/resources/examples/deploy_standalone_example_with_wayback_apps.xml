<!--
        This file contains an example of a deploy configuration file for the 
        one machine scenario. Kind of running 'quickstart' on another machine. 
        Uses HTTP as file transport agent. Requires the availability of 
        port 7676: JMS broker
        port 8040-8050 for the http filetransport servers serving the HTTPRemoteFile;         
        port 8070 for the viewerproxy.
        port 8074 for the GUIApplication webinterface
        port 8090-8093 for the Heritrix GUI 
        port 8110-8121: JMX ports
        port 8210-8221: RMI ports
        port 8122-8124: databases

        Does not include a checksum replica w/ a ChecksumFileApplication
        Uses the default ActiveBitPreservation implementation
        (currently dk.netarkivet.archive.arcrepository.bitpreservation.
         FileBasedActiveBitPreservation).

        Does not include the deployment of the waybackDB.
        Can be deployed using the following script:
        
	#!/bin/bash
	java -Dderby.system.home=/home/test/QUICKSTART/waybackDB -jar /home/test/QUICKSTART/lib/db/derbyrun-10.5.3.0.jar server start \
	-p 8124
-->

<deployGlobal>
    <deployClassPath>lib/dk.netarkivet.harvester.jar</deployClassPath>
    <deployClassPath>lib/dk.netarkivet.archive.jar</deployClassPath>
    <deployClassPath>lib/dk.netarkivet.monitor.jar</deployClassPath>
    <deployClassPath>lib/dk.netarkivet.wayback.jar</deployClassPath>
    <deployJavaOpt>-Xmx1536m</deployJavaOpt>
    <settings>
        <common>
            <environmentName>QUICKSTART</environmentName>
            <applicationInstanceId></applicationInstanceId>
            <remoteFile>
                <class>
                    dk.netarkivet.common.distribute.HTTPRemoteFile
                </class>
            </remoteFile>
            <jms>
                <class>
                    dk.netarkivet.common.distribute.JMSConnectionSunMQ
                </class>
                <broker>localhost</broker>
                <port>7676</port>
            </jms>
            <jmx>
                <passwordFile>conf/jmxremote.password</passwordFile>
                <timeout>120</timeout>
            </jmx>

            <indexClient>
                <indexRequestTimeout>43200000</indexRequestTimeout> 
            </indexClient>
            <replicas>
                <replica>
                    <replicaId>A</replicaId>
                    <replicaName>ReplicaA</replicaName>
                    <replicaType>bitarchive</replicaType>
                </replica>
             </replicas>
            <tempDir>tmpdircommon</tempDir> 
        </common>
        <monitor>
            <jmxUsername>monitorRole</jmxUsername>
            <jmxPassword>test</jmxPassword>
        </monitor>
        <archive>
            <bitpreservation>
                <baseDir>bitpreservation</baseDir>
                <class>dk.netarkivet.archive.arcrepository.bitpreservation.DatabaseBasedActiveBitPreservation</class>
            </bitpreservation>
            <arcrepository>
                <baseDir>.</baseDir>
            </arcrepository>
        </archive>
    </settings>

    <thisPhysicalLocation name="NATIONAL_LIBRARY">
        <deployInstallDir>/home/test</deployInstallDir>
        <deployMachineUserName>test</deployMachineUserName>            
        <settings>
            <common>
                <useReplicaId>A</useReplicaId> 
                <mail>
                    <server>post.kb.dk</server>
                </mail>
                <notifications>
                    <class>dk.netarkivet.common.utils.EMailNotifications</class>
                    <receiver>example@netarkivet.dk</receiver> 
                    <sender>example@netarkivet.dk</sender>
                </notifications>
            </common>
            <viewerproxy>
                <baseDir>viewerproxy</baseDir>
            </viewerproxy>
        </settings>
        <deployMachine name="localhost">
            <deployHarvestDatabaseDir>harvestDatabase</deployHarvestDatabaseDir>
            <deployArchiveDatabaseDir>adminDB</deployArchiveDatabaseDir>
            <settings>
                <archive>
                    <admin>
                        <class>dk.netarkivet.archive.arcrepositoryadmin.DatabaseAdmin</class>
                        <database>
                            <class>dk.netarkivet.archive.arcrepositoryadmin.DerbyServerSpecifics</class>
                            <baseUrl>jdbc:derby</baseUrl>
                            <machine>localhost</machine>
                            <port>8122</port>
                            <dir>adminDB</dir>
                        </database>
                    </admin>
                </archive>
                <common>
                    <database>
                       <class>dk.netarkivet.harvester.datamodel.DerbyServerSpecifics</class>
                       <baseUrl>jdbc:derby</baseUrl>
                       <machine>localhost</machine>
                       <port>8123</port>
                       <dir>harvestDatabase/fullhddb</dir>
                    </database>
                </common>
            </settings>
            <applicationName name="dk.netarkivet.common.webinterface.GUIApplication">
                <settings>
                    <common>
                        <http>
                            <port>8074</port>
                        </http>
                        <jmx>
                            <port>8110</port> 
                            <rmiPort>8210</rmiPort>
                        </jmx>
                        <remoteFile>
                            <class>dk.netarkivet.common.distribute.HTTPRemoteFile</class>
                            <port>8040</port>
                        </remoteFile>
                    </common>
                </settings>
            </applicationName>
            <applicationName name="dk.netarkivet.archive.arcrepository.ArcRepositoryApplication">
                <settings>
                    <common>
                        <jmx>
                            <port>8111</port> 
                            <rmiPort>8211</rmiPort>
                        </jmx>
                         <remoteFile>
                        <class>dk.netarkivet.common.distribute.HTTPRemoteFile</class>
                        <port>8041</port> 
                        </remoteFile>     
                    </common>
                </settings>
            </applicationName>
            <applicationName name="dk.netarkivet.archive.bitarchive.BitarchiveMonitorApplication">
                <settings>
                    <common>
                        <jmx>
                            <port>8112</port>  
                            <rmiPort>8212</rmiPort>
                        </jmx>
                         <remoteFile>
                        <class>dk.netarkivet.common.distribute.HTTPRemoteFile</class>
                        <port>8042</port> 
                        </remoteFile>  
                    </common>
                </settings>
            </applicationName>
            <applicationName name="dk.netarkivet.archive.bitarchive.BitarchiveApplication">
                <settings>
                    <common>
                        <jmx>
                            <port>8113</port>  
                            <rmiPort>8213</rmiPort>
                        </jmx>
                        <remoteFile>
                            <class>dk.netarkivet.common.distribute.HTTPRemoteFile</class>
                            <port>8043</port>
                        </remoteFile>  
                    </common>
                    <archive>
                        <bitarchive>
                            <baseFileDir>bitarkiv</baseFileDir>
                        </bitarchive>
                    </archive>
                </settings>
            </applicationName>
            <applicationName name="dk.netarkivet.harvester.harvesting.HarvestControllerApplication">
                <settings>
                    <common>
                        <applicationInstanceId>snapshot</applicationInstanceId>
                        <jmx>
                            <port>8114</port>
                            <rmiPort>8214</rmiPort>
                        </jmx>
                        <remoteFile>
                            <class>dk.netarkivet.common.distribute.HTTPRemoteFile</class>
                            <port>8044</port> 
                        </remoteFile>  
                    </common>
                    <harvester>
                        <harvesting>
                            <channel>SNAPSHOT</channel>
                            <heritrix>
                                <guiPort>8190</guiPort> 
                                <jmxPort>8191</jmxPort>
                                 <jmxUsername>controlRole</jmxUsername>
                                 <jmxPassword>R_D</jmxPassword>
                            </heritrix>
                            <serverDir>harvester_snapshot</serverDir>
                        </harvesting>
                    </harvester>
                </settings>
            </applicationName>
            <applicationName name="dk.netarkivet.harvester.harvesting.HarvestControllerApplication">
                <settings>
                    <common>
                        <applicationInstanceId>focused</applicationInstanceId>
                        <jmx>
                            <port>8115</port>
                            <rmiPort>8215</rmiPort>
                        </jmx>
                        <remoteFile>
                            <class>dk.netarkivet.common.distribute.HTTPRemoteFile</class>
                            <port>8045</port> 
                        </remoteFile>  
                    </common>
                    <harvester>
                        <harvesting>
                            <channel>FOCUSED</channel>
                            <heritrix>
                                <guiPort>8192</guiPort> 
                                <jmxPort>8193</jmxPort>
                                 <jmxUsername>controlRole</jmxUsername>
                                 <jmxPassword>R_D</jmxPassword>
                            </heritrix>
                        <serverDir>harvester_focused</serverDir>
                        </harvesting>
                    </harvester>
                </settings>
            </applicationName>
            <applicationName name="dk.netarkivet.archive.indexserver.IndexServerApplication">
                <settings>
                    <common>
                        <jmx>
                            <port>8116</port>
                            <rmiPort>8216</rmiPort>
                        </jmx>
                        <remoteFile>
                            <class>dk.netarkivet.common.distribute.HTTPRemoteFile</class>
                            <port>8046</port> 
                        </remoteFile>  
                    </common>
                </settings>
            </applicationName>
            <applicationName name="dk.netarkivet.viewerproxy.ViewerProxyApplication">
                <deployClassPath>lib/dk.netarkivet.harvester.jar</deployClassPath>
                <deployClassPath>lib/dk.netarkivet.archive.jar</deployClassPath>
                <deployClassPath>lib/dk.netarkivet.monitor.jar</deployClassPath>
                <settings>
                    <common>
                        <http>
                            <port>8070</port>
                        </http>
                        <remoteFile>
                            <class>dk.netarkivet.common.distribute.HTTPRemoteFile</class>
                            <port>8047</port>
                        </remoteFile>  
                        <jmx>
                            <port>8117</port>
                            <rmiPort>8217</rmiPort>
                        </jmx>
                    </common>
                </settings>
            </applicationName>            
            <applicationName name="dk.netarkivet.harvester.scheduler.HarvestJobManagerApplication">
                <settings>
                    <common>
                        <jmx>
                            <port>8118</port> 
                            <rmiPort>8218</rmiPort>
                        </jmx>
                        <remoteFile>
                            <class>dk.netarkivet.common.distribute.HTTPRemoteFile</class>
                            <port>8048</port>
                        </remoteFile>  
                    </common>
                </settings> 
             </applicationName> 
            <applicationName name="dk.netarkivet.wayback.indexer.WaybackIndexerApplication">
            <deployClassPath>lib/dk.netarkivet.archive.jar</deployClassPath>
            <deployClassPath>lib/dk.netarkivet.common.jar</deployClassPath>
            <deployClassPath>lib/dk.netarkivet.monitor.jar</deployClassPath>
            <deployClassPath>lib/dk.netarkivet.wayback.jar</deployClassPath>
            <settings>
                <common>
                        <jmx>
                            <port>8120</port>
                            <rmiPort>8220</rmiPort>
                        </jmx>
                        <remoteFile>
                            <class>dk.netarkivet.common.distribute.HTTPRemoteFile</class>
                            <port>8049</port>
                        </remoteFile>  
                    </common>
                <wayback>
                        <hibernate>
                            <c3p0>
                                <acquireIncrement>1</acquireIncrement>
                                <idleTestPeriod>100</idleTestPeriod>
                                <maxSize>100</maxSize>
                                <maxStatements>100</maxStatements>
                                <minSize>10</minSize>
                                <timeout>100</timeout>
                            </c3p0>
                            <connectionUrl>jdbc:derby://localhost:8124/wayback_indexer_db;create=true</connectionUrl>
                            <dbDriverClass>org.apache.derby.jdbc.ClientDriver</dbDriverClass>
                            <useReflectionOptimizer>false</useReflectionOptimizer>
                            <transactionFactory>org.hibernate.transaction.JDBCTransactionFactory</transactionFactory>
                            <dialect>org.hibernate.dialect.DerbyDialect</dialect>
                            <showSql>true</showSql>
                            <formatSql>true</formatSql>
                            <hbm2ddlAuto>update</hbm2ddlAuto>
                            <user></user>
                            <password></password>
                        </hibernate>
                        <indexer>
                            <replicaId>A</replicaId>
                            <finalBatchOutputDir>batchOutputDir</finalBatchOutputDir>
                            <tempBatchOutputDir>tempdir</tempBatchOutputDir>
                            <maxFailedAttempts>3</maxFailedAttempts>
                            <producerDelay>0</producerDelay>
                            <producerInterval>300000</producerInterval>
                            <consumerThreads>5</consumerThreads>
                            <initialFiles></initialFiles>
                        </indexer>
                    </wayback>                
            </settings>
            </applicationName>

            <applicationName name="dk.netarkivet.wayback.aggregator.AggregatorApplication">
            <deployClassPath>lib/dk.netarkivet.archive.jar</deployClassPath>
            <deployClassPath>lib/dk.netarkivet.common.jar</deployClassPath>
            <deployClassPath>lib/dk.netarkivet.monitor.jar</deployClassPath>
            <deployClassPath>lib/dk.netarkivet.wayback.jar</deployClassPath>
                <settings>
                    <common>
                        <jmx>
                            <port>8121</port>
                            <rmiPort>8221</rmiPort>
                        </jmx>
                        <remoteFile>
                            <class>dk.netarkivet.common.distribute.HTTPRemoteFile</class>
                            <port>8050</port>
                        </remoteFile>  
                    </common>
                    <wayback>
                        <aggregator>
                            <indexFileInputDir>batchOutputDir</indexFileInputDir>
                            <indexFileOutputDir>indexDir</indexFileOutputDir>
                            <tempAggregatorDir>aggregator_tempdir</tempAggregatorDir>
                            <aggregationInterval>600000</aggregationInterval>
                            <!-- 102400 KB = 100 MB -->
                            <maxIntermediateIndexFileSize>102400</maxIntermediateIndexFileSize>
                            <!-- 104857600 KB = 100 GB -->
                            <maxMainIndexFileSize>104857600</maxMainIndexFileSize>
                        </aggregator>
                    </wayback>
                </settings>
            </applicationName>

        </deployMachine>
    </thisPhysicalLocation>
</deployGlobal>

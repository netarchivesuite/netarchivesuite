<?xml version="1.0" encoding="UTF-8"?>
<dk xmlns="http://www.netarkivet.dk/schemas/settings" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <netarkivet>
        <webinterface>
            <viewerproxyhostname>kb-prod-acs-001.kb.dk</viewerproxyhostname>
        </webinterface>
        <dirs>
            <arcrepository>
                <admin>.</admin>
                <bitpreservation>bitpreservation</bitpreservation>
            </arcrepository>
            <commontempdir>./tests/commontempdir</commontempdir>
            <illegalentry>Don't read this!</illegalentry>
        <viewerproxy>viewerproxy</viewerproxy><cache>cache</cache></dirs>
        <short_time>10</short_time>
        <short_timeout>1000</short_timeout>
        <arcrepository>
            <timeout>3000</timeout>
            <batchTimeout>3000</batchTimeout>
            <getTimeout>3000</getTimeout>
            <storeRetries>3</storeRetries>
            <storeTimeout>3600000</storeTimeout>
        </arcrepository>
        <jms>
            <class>dk.netarkivet.common.distribute.JMSConnectionSunMQ</class>
            <broker>kb-test-adm-001.kb.dk</broker>
            <port>7676</port>
        </jms>
        <ftp>
            <serverName>localhost</serverName>
            <serverPort>21</serverPort>
            <userName>jms</userName>
            <userPassword>jms*ftp</userPassword>
            <copyto_retries>3</copyto_retries>
        </ftp>
        <http>
            <portNumber>8076</portNumber>
        </http>
        <environment>
            <environmentName>DEV</environmentName>
            <location>
                <name>SB</name>
                <credentials>42</credentials>
            </location>
            <location>
                <name>KB</name>
                <credentials>43</credentials>
            </location>
            <thisLocation>SB</thisLocation>
            <thisCredentials>42</thisCredentials>
        <batchLocation>KB</batchLocation></environment>
        <utils>
            <remoteFileClass>dk.netarkivet.common.distribute.FTPRemoteFile</remoteFileClass>
        </utils>
        <application>
            <name>NA</name>
        </application>
        <htmllogs>
            <dir>./log/</dir>
        </htmllogs>
        <bitarchive>
            <minspaceleft>2000000000</minspaceleft>
            <filedir>m:\bitarchive</filedir>
            <filedir>n:\bitarchive</filedir>
            <filedir>o:\bitarchive</filedir>
            <filedir>p:\bitarchive</filedir>
        </bitarchive>
        <distribute>
            <harvestControllerPriority>HIGHPRIORITY</harvestControllerPriority>
            <harvestscheduler>
                <serverdir>server</serverdir>
                <oldjobsdir>oldjobs</oldjobsdir>
            </harvestscheduler>
            <bitarchive>
                <heartBeatFrequency>1000</heartBeatFrequency>
                <acceptableHeartBeatDelay>2000</acceptableHeartBeatDelay>
                <batchMessageTimeout>172800000</batchMessageTimeout>
            </bitarchive>
        <indexserver><indexRequestTimeout>43200000</indexRequestTimeout></indexserver></distribute>
        <domain>
            <defaultseedlist>defaultseeds</defaultseedlist>
            <defaultconfig>defaultconfig</defaultconfig>
            <defaultorderxml>default_orderxml</defaultorderxml>
            <defaultmaxrate>100</defaultmaxrate>
        </domain>
        <harvestdefinition>
            <errorfactor_prevresult>10</errorfactor_prevresult>
            <errorfactor_bestguess>2</errorfactor_bestguess>
            <expectedAverageBytesPerObject>38000</expectedAverageBytesPerObject>
            <maxdomainsize>5000</maxdomainsize>
            <basedir>harvestdefinitionbasedir</basedir>
            <webgui_webapplication_directory>webpages/HarvestDefinition</webgui_webapplication_directory>
            <webgui_deployment_directory>/HarvestDefinition</webgui_deployment_directory>
            <jobs>
                <maxRelativeSizeDifference>100</maxRelativeSizeDifference>
                <minAbsoluteSizeDifference>100</minAbsoluteSizeDifference>
                <maxTotalSize>1000000</maxTotalSize>
            </jobs>
            <configChunkSize>10000</configChunkSize>
        </harvestdefinition>

        <crawler>
            <inactivityTimeoutInSecs>600</inactivityTimeoutInSecs>
            <timeoutOnNonResponding>600</timeoutOnNonResponding>
        </crawler>
        <harvestcontroller>
            <isrunningfile>./hcsRunning.tmp</isrunningfile>
        </harvestcontroller>
    </netarkivet>
</dk>
